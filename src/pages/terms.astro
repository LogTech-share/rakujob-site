---
import Layout from '../layouts/Layout.astro';
---

    <style>
      body {
        margin: 0;
        font-family: sans-serif;
        line-height: 1.6;
      }

      main {
        max-width: 800px;
        margin: 8rem auto 4rem;
        padding: 2rem;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      h2 {
        font-size: 1.2rem;
        margin-top: 2rem;
        color: #333;
      }

      p {
        margin-top: 0.5rem;
      }

      /* Animated Background */
	.animated-background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		background: radial-gradient(328px at 2.9% 15%, rgb(191, 224, 251) 0%, rgb(232, 251, 248) 25.8%, rgb(252, 239, 246) 50.8%, rgb(251, 255, 239) 77.6%, rgb(240, 251, 244) 100.7%);
		overflow: hidden;
	}

	.gradient-orb {
		position: absolute;
		border-radius: 50%;
		filter: blur(40px);
		opacity: 0.6;
		animation: float 20s infinite ease-in-out;
	}

	.orb-1 {
		width: 300px;
		height: 300px;
		background: linear-gradient(45deg, var(--main-color), var(--accent-color));
		top: 10%;
		left: 10%;
		animation-delay: 0s;
	}

	.orb-2 {
		width: 200px;
		height: 200px;
		background: linear-gradient(135deg, var(--accent-color), #ff6b9d);
		top: 60%;
		right: 20%;
		animation-delay: 5s;
	}

	.orb-3 {
		width: 250px;
		height: 250px;
		background: linear-gradient(225deg, var(--main-color), #ffd93d);
		bottom: 20%;
		left: 30%;
		animation-delay: 10s;
	}

	.orb-4 {
		width: 180px;
		height: 180px;
		background: linear-gradient(315deg, var(--accent-color), var(--main-color));
		top: 30%;
		right: 10%;
		animation-delay: 15s;
	}


      /* Footer */
      .footer {
        background: #2c3e50;
        color: white;
        padding: 4rem 0 2rem;
      }

      .footer-content {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 3rem;
        margin-bottom: 3rem;
        align-items: center;
      }

      .footer-logo {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 1rem;
      }

      .footer-description {
        color: #bdc3c7;
        margin: 0;
      }

      .footer-links {
        display: flex;
        gap: 2rem;
      }

      .footer-link {
        color: #bdc3c7;
        text-decoration: none;
        transition: color 0.3s ease;
        font-weight: 500;
      }

      .footer-link:hover {
        color: white;
      }

      .footer-bottom {
        border-top: 1px solid #34495e;
        padding-top: 2rem;
        text-align: center;
        color: #bdc3c7;
      }

      .footer-bottom a {
        color: var(--main-color);
        text-decoration: none;
      }

      /* Header Styles */
      .main-header {
        position: fixed;
        top: 1rem;
        left: 1rem;
        right: 1rem;
        z-index: 1000;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      }

      .header-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem;
      }

      .logo-container {
        display: flex;
        flex-direction: column;
      }

      .logo {
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
      }

      .logo-raku {
        color: var(--main-color, #3498db);
      }

      .logo-job {
        color: var(--accent-color, #e67e22);
      }

      .logo-subtitle {
        font-size: 0.8rem;
        color: #666;
        margin: 0;
      }

      .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
      }

      .nav-link {
        color: var(--text-color, #333);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
        position: relative;
      }

      .nav-link::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--accent-color, #e67e22);
        transition: width 0.3s ease;
      }

      .nav-link:hover::after {
        width: 100%;
      }

      .nav-cta {
        padding: 0.8rem 1.5rem;
        font-size: 0.9rem;
      }

      .mobile-menu-toggle {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
      }

      .mobile-menu-toggle span {
        width: 25px;
        height: 3px;
        background: var(--text-color, #333);
        margin: 3px 0;
        transition: 0.3s;
        border-radius: 2px;
      }

      /* Mobile Responsive */
	@media (max-width: 768px) {
		.mobile-menu-toggle {
			display: flex;
		}

		.stress-free-text {
			font-size: 1.4rem;
			padding: 0.6rem 1rem;
			margin: 0.3rem 0;
			display: inline-block;
			border-radius: 15px;
			line-height: 1.2;
		}

		.stress-free-text::before {
			font-size: 1.4rem;
		}

		.nav-links {
			display: none;
		}

		.hero-title {
			font-size: 2.2rem;
			line-height: 1.2;
		}

		.hero-badges {
			flex-direction: column;
			gap: 1rem;
			align-items: center;
			margin-top: 2rem;
		}

		.bubble-badge {
			font-size: 0.9rem;
			padding: 0.8rem 1.2rem;
			min-width: 280px;
			text-align: center;
		}

		.hero-line-1 {
			font-size: 2.2rem;
			line-height: 1.2;
		}

		.hero-line-2 {
			font-size: 1.1rem;
			white-space: normal;
			line-height: 1.4;
		}

		/* Duplicate removed - already defined above */

		.bubble-badge {
			width: 140px;
			height: 140px;
			padding: 0;
		}

		.badge-text {
			font-size: 0.8rem;
		}

		.scroll-indicator {
			bottom: 20px;
		}

		.stress-free-text {
			padding: 0.4rem 0.8rem;
			font-size: 1.8rem;
		}

		.hero-title-container {
			margin-bottom: 2rem;
		}

		.lifestyle-comparison {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.lifestyle-card {
			padding: 1.2rem;
		}

		.lifestyle-label {
			font-size: 2.2rem;
			margin-bottom: 1.5rem;
		}

		.lifestyle-image {
			height: 250px;
		}

		.transformation-arrow {
			transform: rotate(90deg);
		}



		.point-item {
			padding: 0.6rem 0.8rem;
			font-size: 0.85rem;
			gap: 0.6rem;
		}

		.point-emoji {
			font-size: 1rem;
		}

		.feature-slide {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.feature-illustration {
			width: 250px;
			height: 250px;
		}

		.feature-image {
			width: 100px;
			height: 100px;
		}

		.block-cta-layout {
			grid-template-areas: 
				"circle"
				"info"
				"buttons";
			grid-template-columns: 1fr;
			gap: 2rem;
			text-align: center;
		}

		.main-block {
			width: 250px;
			height: 250px;
			margin: 0 auto;
			padding: 1.5rem;
		}

		.main-block .block-text {
			font-size: 1.4rem;
		}

		.info-block {
			padding: 2rem;
			min-width: auto;
			width: 100%;
		}

		.info-block .block-text {
			font-size: 1rem;
		}

		.buttons-block {
			padding: 1rem;
		}

		.buttons-block .block-content {
			flex-direction: column;
			gap: 1rem;
			align-items: center;
		}

		.block-btn {
			min-width: 260px;
		}

		.jobs-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.job-card {
			padding: 2rem;
		}

		.testimonials-container {
			grid-template-columns: 1fr;
		}

		.timeline-steps {
			grid-template-columns: 1fr;
		}

		.timeline-progress {
			display: none;
		}

		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.footer-links {
			justify-content: center;
		}


	}

	@media (max-width: 480px) {
		.hero-title {
			font-size: 1.8rem;
			line-height: 1.1;
		}

		.stress-free-text {
			font-size: 1.2rem;
			padding: 0.5rem 0.8rem;
			margin: 0.2rem 0;
			border-radius: 12px;
			line-height: 1.1;
		}

		.stress-free-text::before {
			font-size: 1.2rem;
		}

		.hero-line-1 {
			font-size: 1.8rem;
			line-height: 1.1;
		}

		.hero-line-2 {
			font-size: 0.95rem;
			line-height: 1.3;
			white-space: normal;
		}

		.hero-badges {
			gap: 1rem;
			margin: 2rem 0;
		}

		.bubble-badge {
			width: 260px;
			height: auto;
			font-size: 0.85rem;
			padding: 0.7rem 1rem;
			border-radius: 25px;
			min-height: 50px;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		/* Duplicate bubble-badge removed */

		.badge-text {
			font-size: 0.85rem;
			line-height: 1.2;
		}

		.section-title {
			font-size: 2rem;
		}

		.stress-free-text {
			padding: 0.3rem 0.6rem;
			font-size: 1.5rem;
		}

		.hero-title-container {
			margin-bottom: 1.5rem;
		}

		.lifestyle-card {
			padding: 1rem;
		}

		.lifestyle-label {
			font-size: 1.8rem;
			margin-bottom: 1rem;
		}

		.lifestyle-image {
			height: 200px;
		}

		.lifestyle-caption {
			font-size: 1.4rem;
			margin-bottom: 1rem;
		}



		.transformation-text {
			font-size: 0.8rem;
			padding: 0.4rem 0.8rem;
		}

		.point-item {
			padding: 0.5rem 0.7rem;
			font-size: 0.8rem;
			gap: 0.5rem;
		}

		.point-emoji {
			font-size: 0.9rem;
		}

		.feature-slide {
			padding: 2rem 1.5rem;
		}

		.feature-illustration {
			width: 200px;
			height: 200px;
		}

		.feature-image {
			width: 80px;
			height: 80px;
		}

		.main-block {
			width: 200px;
			height: 200px;
			padding: 1rem;
		}

		.main-block .block-text {
			font-size: 1.2rem;
		}

		.info-block {
			padding: 1.5rem;
		}

		.info-block .block-text {
			font-size: 0.95rem;
		}

		.buttons-block {
			padding: 0.5rem;
		}

		.buttons-block .block-content {
			flex-direction: column;
			gap: 1rem;
		}

		.block-btn {
			padding: 1rem 1.2rem;
			font-size: 0.9rem;
			min-width: 240px;
		}

		.job-card {
			padding: 1.5rem;
		}

		.job-icon {
			width: 60px;
			height: 60px;
		}

		.job-title {
			font-size: 1.3rem;
		}

		.testimonial-card {
			padding: 2rem 1.5rem;
		}
	}
    </style>
  </head>
