<style>
.loading-overlay {
  position: fixed;
  z-index: 9999;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #eaf6f6 0%, #e3f6e8 100%);
  transition: opacity 0.7s cubic-bezier(0.4,0,0.2,1);
  font-family: 'Noto Sans JP', 'Inter', sans-serif;
}
.loading-overlay.fade-out {
  opacity: 0;
  pointer-events: none;
}
.loading-logo-text {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.8rem;
  font-weight: 800;
  margin-bottom: 2rem;
  letter-spacing: 0.02em;
  user-select: none;
  opacity: 0;
  transform: translateY(30px);
  animation: logo-fade-in 1.2s cubic-bezier(0.4,0,0.2,1) 0.2s forwards;
}
@keyframes logo-fade-in {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
.loading-logo-text .logo-raku {
  color: #B0D371;
  letter-spacing: 0.04em;
}
.loading-logo-text .logo-job {
  color: #169EBD;
  margin-left: 0.1em;
}
.loading-dots {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 2rem;
}
.loading-dot {
  width: 14px;
  height: 14px;
  border-radius: 50%;
  background: #b0d371;
  opacity: 0.7;
  animation: loading-bounce 1.2s infinite alternate;
}
.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
  background: #169ebd;
}
.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
  background: #f7e9b0;
}
@keyframes loading-bounce {
  0% { transform: translateY(0); opacity: 0.7; }
  50% { transform: translateY(-18px); opacity: 1; }
  100% { transform: translateY(0); opacity: 0.7; }
}
.loading-tagline {
  font-size: 1.2rem;
  color: #333;
  text-align: center;
  font-weight: 500;
  letter-spacing: 0.02em;
  background: rgba(255,255,255,0.7);
  border-radius: 12px;
  padding: 1.2rem 2rem;
  box-shadow: 0 2px 12px rgba(176,211,113,0.07);
  opacity: 0;
  transform: translateY(20px);
  animation: tagline-fade-in 1.2s cubic-bezier(0.4,0,0.2,1) 0.9s forwards;
}
@keyframes tagline-fade-in {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
.loading-tagline .brand-gradient {
  background: linear-gradient(90deg, #B0D371 0%, #169EBD 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
  padding: 0 0.2em;
}
</style>
<div id="rakujob-loading" class="loading-overlay">
  <div class="loading-logo-text">
    <span class="logo-raku">Raku</span><span class="logo-job">Job</span>
  </div>
  <div class="loading-dots">
    <div class="loading-dot"></div>
    <div class="loading-dot"></div>
    <div class="loading-dot"></div>
  </div>
  <div class="loading-tagline">
    あなたらしく、<span class="brand-gradient">ストレスフリー</span>な仕事を。<br />楽ジョブと一緒に。
  </div>
</div>
<script is:inline>
window.addEventListener('DOMContentLoaded', () => {
  window.addEventListener('load', () => {
    setTimeout(() => {
      const loader = document.getElementById('rakujob-loading');
      if (loader) loader.classList.add('fade-out');
      setTimeout(() => { if (loader) loader.style.display = 'none'; window.dispatchEvent(new Event('rakujob:loading-finished')); }, 900);
    }, 3000); // show at least 3s for readability
  });
});
</script>
